<% layout('../layout/boilerplate')%>
<br><br>
   <center> <h1>SELLER REGISTER FORM</h1></center>
    <br>
    <div class="row">
        <div class="card col-md-6 col-sm-9 offset-md-3">
           <div class="card-body">
            <form action="/seller/auth/register" method="post" class="mb-3 formvalid" novalidate>
                <div class="form-floating">
                    
                    <input class="form-control" required autocomplete="off" type="text" id="location"
                        name="seller[username]" placeholder="jjj" required>
                        <label for="location">Username </label>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please give a usename!
                    </div>
                </div>
                <br>
                <div class="form-floating">                   
                    <input class="form-control" required autocomplete="off" type="text" id="title" name="seller[email]" placeholder="jjj">
                    <label  for="email">Email </label>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please give your email!
                    </div>
                </div>
                <br>
                <div class="form-floating">
                    <input class="form-control" required autocomplete="off" type="password" id="location" placeholder="jjj"
                        name="seller[password]" required>
                        <label  for="location">Password </label>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please give a password!
                    </div>
                </div>
                <br>         
                <button class="btn btn-success">Register</button>           
            </form>
            <a href="/seller/auth/login" style="text-decoration: none;">Already have an account?</a>
           </div>
        </div>
    </div>

  