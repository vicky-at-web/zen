<% layout('../layout/templates/seller/boilerplate') -%>
<div class="container col-6 offset-3">
    <!-- Type -->
<div class="form-group">
    <label for="type">Type</label>
    <input type="text" class="form-control" id="type" name="type" placeholder="Enter snack type">
</div>

<!-- Weight -->
<div class="form-group">
    <label for="weight">Weight</label>
    <input type="number" class="form-control" id="weight" name="weight" placeholder="Enter weight">
</div>

<!-- Quantity -->
<div class="form-group">
    <label for="quantity">Quantity</label>
    <input type="number" class="form-control" id="quantity" name="quantity" placeholder="Enter quantity">
</div>

<!-- Organic -->
<div class="form-check">
    <input class="form-check-input" type="checkbox" value="true" id="organic" name="organic">
    <label class="form-check-label" for="organic">
        Organic
    </label>
</div>

<!-- Dietary Restrictions -->
<div class="form-group">
    <label for="dietaryRestrictions">Dietary Restrictions</label>
    <input type="text" class="form-control" id="dietaryRestrictions" name="dietaryRestrictions" placeholder="Enter dietary restrictions (comma-separated)">
</div>

<!-- Brand -->
<div class="form-group">
    <label for="brand">Brand</label>
    <input type="text" class="form-control" id="brand" name="brand" placeholder="Enter brand">
</div>

<button type="submit" class="btn btn-primary">Submit</button>

</div>
