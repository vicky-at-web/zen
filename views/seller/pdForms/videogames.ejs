<% layout('../layout/templates/seller/boilerplate') -%>
    <div class="container col-6 offset-3">
        <!-- Platform -->
        <div class="form-group">
            <label for="platform">Platform</label>
            <input type="text" class="form-control" id="platform" name="platform" placeholder="Enter platform">
        </div>

        <!-- Genre -->
        <div class="form-group">
            <label for="genre">Genre</label>
            <input type="text" class="form-control" id="genre" name="genre"
                placeholder="Enter genre(s) (comma-separated)">
        </div>

        <!-- Release Date -->
        <div class="form-group">
            <label for="releaseDate">Release Date</label>
            <input type="date" class="form-control" id="releaseDate" name="releaseDate"
                placeholder="Enter release date">
        </div>

        <!-- Multiplayer -->
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="true" id="multiplayer" name="multiplayer">
            <label class="form-check-label" for="multiplayer">
                Multiplayer
            </label>
        </div>

        <!-- ESRB Rating -->
        <div class="form-group">
            <label for="ESRBrating">ESRB Rating</label>
            <input type="text" class="form-control" id="ESRBrating" name="ESRBrating" placeholder="Enter ESRB rating">
        </div>

        <!-- Developer -->
        <div class="form-group">
            <label for="developer">Developer</label>
            <input type="text" class="form-control" id="developer" name="developer" placeholder="Enter developer">
        </div>

        <!-- Publisher -->
        <div class="form-group">
            <label for="publisher">Publisher</label>
            <input type="text" class="form-control" id="publisher" name="publisher" placeholder="Enter publisher">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>

    </div>