<% layout('../layout/templates/seller/boilerplate') -%>
<div class="container col-6 offset-3">
    <!-- Age Group -->
<div class="form-group">
    <label for="ageGroup">Age Group</label>
    <input type="text" class="form-control" id="ageGroup" name="ageGroup" placeholder="Enter age group">
</div>

<!-- Size -->
<h5>Size</h5>
<div class="form-group">
    <label for="sizeType">Size Type</label>
    <input type="text" class="form-control" id="sizeType" name="size[type]" placeholder="Enter size type">
</div>
<div class="form-group">
    <label for="sizeWidth">Chest</label>
    <input type="number" class="form-control" id="sizeWidth" name="size[or][chest]" placeholder="Enter chest size">
</div>
<div class="form-group">
    <label for="sizeHeight">Waist</label>
    <input type="number" class="form-control" id="sizeHeight" name="size[or][waist]" placeholder="Enter waist size">
</div>
<div class="form-group">
    <label for="sizeLength">Length</label>
    <input type="number" class="form-control" id="sizeLength" name="size[or][length]" placeholder="Enter length">
</div>

<!-- Material -->
<div class="form-group">
    <label for="material">Material</label>
    <input type="text" class="form-control" id="material" name="material" placeholder="Enter material">
</div>

<!-- Color -->
<div class="form-group">
    <label for="color">Color</label>
    <input type="text" class="form-control" id="color" name="color" placeholder="Enter color">
</div>

<!-- Occasion -->
<div class="form-group">
    <label for="occasion">Occasion</label>
    <input type="text" class="form-control" id="occasion" name="occasion" placeholder="Enter occasion">
</div>

<!-- Closure -->
<div class="form-group">
    <label for="closure">Closure</label>
    <input type="text" class="form-control" id="closure" name="closure" placeholder="Enter closure">
</div>

<!-- Wash Care -->
<div class="form-group">
    <label for="washCare">Wash Care</label>
    <input type="text" class="form-control" id="washCare" name="washCare" placeholder="Enter wash care instructions">
</div>

<!-- Character -->
<div class="form-group">
    <label for="character">Character</label>
    <input type="text" class="form-control" id="character" name="character" placeholder="Enter character">
</div>

<!-- Style -->
<div class="form-group">
    <label for="style">Style</label>
    <input type="text" class="form-control" id="style" name="style" placeholder="Enter style">
</div>

<!-- Brand -->
<div class="form-group">
    <label for="brand">Brand</label>
    <input type="text" class="form-control" id="brand" name="brand" placeholder="Enter brand">
</div>

<button type="submit" class="btn btn-primary">Submit</button>

</div>
