<% layout('../layout/templates/seller/boilerplate') -%>
<div class="container col-6 offset-3">
    <!-- Artist -->
<div class="form-group">
    <label for="artist">Artist</label>
    <input type="text" class="form-control" id="artist" name="artist" placeholder="Enter artist">
</div>

<!-- Album -->
<div class="form-group">
    <label for="album">Album</label>
    <input type="text" class="form-control" id="album" name="album" placeholder="Enter album">
</div>

<!-- Genre -->
<div class="form-group">
    <label for="genre">Genre</label>
    <input type="text" class="form-control" id="genre" name="genre" placeholder="Enter genre(s) (comma-separated)">
</div>

<!-- Release Date -->
<div class="form-group">
    <label for="releaseDate">Release Date</label>
    <input type="date" class="form-control" id="releaseDate" name="releaseDate" placeholder="Enter release date">
</div>

<!-- Format -->
<div class="form-group">
    <label for="format">Format</label>
    <input type="text" class="form-control" id="format" name="format" placeholder="Enter format">
</div>

<!-- Song Titles -->
<div class="form-group">
    <label for="songTitles">Song Titles</label>
    <input type="text" class="form-control" id="songTitles" name="songTitles" placeholder="Enter song titles (comma-separated)">
</div>

<!-- Explicit Lyrics -->
<div class="form-check">
    <input class="form-check-input" type="checkbox" value="true" id="explicitLyrics" name="explicitLyrics">
    <label class="form-check-label" for="explicitLyrics">
        Explicit Lyrics
    </label>
</div>

<!-- Record Label -->
<div class="form-group">
    <label for="recordLabel">Record Label</label>
    <input type="text" class="form-control" id="recordLabel" name="recordLabel" placeholder="Enter record label">
</div>

<button type="submit" class="btn btn-primary">Submit</button>

</div>
