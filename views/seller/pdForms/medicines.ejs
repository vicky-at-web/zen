<% layout('../layout/templates/seller/boilerplate') -%>
<div class="container col-6 offset-3">
    <!-- Name -->
<div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" name="name" placeholder="Enter medicine name">
</div>

<!-- Type -->
<div class="form-group">
    <label for="type">Type</label>
    <input type="text" class="form-control" id="type" name="type" placeholder="Enter medicine type">
</div>

<!-- Intended Use -->
<div class="form-group">
    <label for="intendedUse">Intended Use</label>
    <input type="text" class="form-control" id="intendedUse" name="intendedUse" placeholder="Enter intended use">
</div>

<!-- Dosage -->
<div class="form-group">
    <label for="dosage">Dosage</label>
    <input type="text" class="form-control" id="dosage" name="dosage" placeholder="Enter dosage">
</div>

<!-- Side Effects -->
<div class="form-group">
    <label for="sideEffects">Side Effects</label>
    <input type="text" class="form-control" id="sideEffects" name="sideEffects" placeholder="Enter side effects (comma-separated)">
</div>

<!-- Warnings -->
<div class="form-group">
    <label for="warnings">Warnings</label>
    <input type="text" class="form-control" id="warnings" name="warnings" placeholder="Enter warnings (comma-separated)">
</div>

<!-- Brand -->
<div class="form-group">
    <label for="brand">Brand</label>
    <input type="text" class="form-control" id="brand" name="brand" placeholder="Enter brand">
</div>

<button type="submit" class="btn btn-primary">Submit</button>

</div>