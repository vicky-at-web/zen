<% layout('../layout/templates/seller/boilerplate') -%>
<div class="container col-6 offset-3">
    <!-- Type -->
<div class="form-group">
    <label for="type">Type</label>
    <input type="text" class="form-control" id="type" name="type" placeholder="Enter activewear type">
</div>

<!-- Gender -->
<div class="form-group">
    <label for="gender">Gender</label>
    <input type="text" class="form-control" id="gender" name="gender" placeholder="Enter gender">
</div>

<!-- Material -->
<div class="form-group">
    <label for="material">Material</label>
    <input type="text" class="form-control" id="material" name="material" placeholder="Enter material">
</div>

<!-- Color -->
<div class="form-group">
    <label for="color">Color</label>
    <input type="text" class="form-control" id="color" name="color" placeholder="Enter color">
</div>

<!-- Size -->
<h5>Size</h5>
<div class="form-group">
    <label for="sizeType">Size Type</label>
    <input type="text" class="form-control" id="sizeType" name="size[type]" placeholder="Enter size type">
</div>
<div class="form-group">
    <label for="sizeWidth">Width</label>
    <input type="number" class="form-control" id="sizeWidth" name="size[or][width]" placeholder="Enter width (if applicable)">
</div>
<div class="form-group">
    <label for="sizeHeight">Height</label>
    <input type="number" class="form-control" id="sizeHeight" name="size[or][height]" placeholder="Enter height (if applicable)">
</div>
<div class="form-group">
    <label for="sizeLength">Length</label>
    <input type="number" class="form-control" id="sizeLength" name="size[or][length]" placeholder="Enter length (if applicable)">
</div>

<!-- Support Level -->
<div class="form-group">
    <label for="supportLevel">Support Level</label>
    <input type="text" class="form-control" id="supportLevel" name="supportLevel" placeholder="Enter support level">
</div>

<!-- Features -->
<div class="form-group">
    <label for="features">Features</label>
    <input type="text" class="form-control" id="features" name="features" placeholder="Enter features (comma-separated)">
</div>

<!-- Closure -->
<div class="form-group">
    <label for="closure">Closure</label>
    <input type="text" class="form-control" id="closure" name="closure" placeholder="Enter closure type">
</div>

<!-- Pockets -->
<div class="form-group">
    <label for="pockets">Pockets</label>
    <select class="form-control" id="pockets" name="pockets">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
</div>

<!-- Brand -->
<div class="form-group">
    <label for="brand">Brand</label>
    <input type="text" class="form-control" id="brand" name="brand" placeholder="Enter brand">
</div>

<button type="submit" class="btn btn-primary">Submit</button>

</div>