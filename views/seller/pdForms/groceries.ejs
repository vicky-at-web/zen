<% layout('../layout/templates/seller/boilerplate') -%>
<div class="container col-6 offset-3">
    <!-- Type -->
<div class="form-group">
    <label for="type">Type</label>
    <input type="text" class="form-control" id="type" name="type" placeholder="Enter type of grocery">
</div>

<!-- Weight -->
<div class="form-group">
    <label for="weight">Weight</label>
    <input type="number" class="form-control" id="weight" name="weight" placeholder="Enter weight">
</div>

<!-- Serving Size -->
<div class="form-group">
    <label for="servingSize">Serving Size</label>
    <input type="text" class="form-control" id="servingSize" name="servingSize" placeholder="Enter serving size">
</div>

<!-- Sweet or Savory -->
<div class="form-group">
    <label for="sweetOrSavory">Sweet or Savory</label>
    <input type="text" class="form-control" id="sweetOrSavory" name="sweetOrSavory" placeholder="Enter sweet or savory">
</div>

<!-- Dietary Restrictions -->
<div class="form-group">
    <label for="dietaryRestrictions">Dietary Restrictions</label>
    <input type="text" class="form-control" id="dietaryRestrictions" name="dietaryRestrictions" placeholder="Enter dietary restrictions (comma-separated)">
</div>

<!-- Brand -->
<div class="form-group">
    <label for="brand">Brand</label>
    <input type="text" class="form-control" id="brand" name="brand" placeholder="Enter brand">
</div>

<button type="submit" class="btn btn-primary">Submit</button>

</div>