<% layout('../layout/templates/seller/boilerplate') -%>
<div class="container col-6 offset-3">
    <!-- Type -->
<div class="form-group">
    <label for="type">Type</label>
    <input type="text" class="form-control" id="type" name="type" placeholder="Enter maintenance type">
</div>

<!-- Application -->
<div class="form-group">
    <label for="application">Application</label>
    <input type="text" class="form-control" id="application" name="application" placeholder="Enter application">
</div>

<!-- Capacity -->
<div class="form-group">
    <label for="capacity">Capacity</label>
    <input type="number" class="form-control" id="capacity" name="capacity" placeholder="Enter capacity">
</div>

<!-- Compatibility -->
<div class="form-group">
    <label for="compatibility">Compatibility</label>
    <input type="text" class="form-control" id="compatibility" name="compatibility" placeholder="Enter compatibility (comma-separated)">
</div>

<!-- Brand -->
<div class="form-group">
    <label for="brand">Brand</label>
    <input type="text" class="form-control" id="brand" name="brand" placeholder="Enter brand">
</div>

<button type="submit" class="btn btn-primary">Submit</button>

</div>
