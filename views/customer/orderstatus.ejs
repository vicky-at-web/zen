<% layout('../layout/templates/customer/boilerplate') -%>

    <div class="container">
        <div class="card">
            <div class="card-body p-5 position-relative">
                <div class="position-absolute top-0 start-0 p-3 ms-3">
                    <div class="mb-2"><b>Order No:</b>
                        <%= order.orderId %></div> 
                    <div>
                        <b>Ordered Date:</b>
                    <%= order.orderDate.getDate() %>/<%= order.orderDate.getMonth() %>/<%= order.orderDate.getFullYear() %>
                    </div>


                </div>
                <br><br>
                <div class="progress" role="progressbar" aria-label="Example 1px high" aria-valuenow="25"
                    aria-valuemin="0" aria-valuemax="100" style="height: 15px">
                    <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 66%"></div>
                </div><br>
                <div class="d-flex justify-content-between">
                    <div style="font-weight:bold;">Processing Your Order</div>
                    <div style="font-weight:bold;">Shipped</div>
                    <div style="font-weight:bold;">Reached Noida</div>
                    <div style="font-weight:bold;">Reached Bengaluru</div>
                    <div style="font-weight:bold;">Reached Your nearest Delivery Hub</div>
                    <div style="font-weight:bold;">Delivered</div>
                </div>
                <div class="d-flex justify-content-center">
                    <div class="card mt-5 p-0 col-9">
                        <div class="row g-0">
                          <div class="col-md-4 d-flex justify-content-center align-items-center">
                            <img src="<%= order.product.imageUrl[0] %>" class="img-fluid p-0 rounded-start" alt="...">
                          </div>
                          <div class="col-md-8">
                            <div class="card-body">
                              <h5 class="card-title">
                                <%= order.product.name %>
                              </h5>
                              <p class="card-text">
                                <%= order.product.headers %>
                              </p>
                              <p class="card-text"><small class="text-body-secondary price">
                                 $ <%= order.product.price %>
                                </small></p>
                            </div>
                          </div>
                        </div>
                      </div>
                </div>
            </div>
        </div>
    </div>